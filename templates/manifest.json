{
	  "name": "RIFU",
	  "version": "1.0",
	  "background_page": "background.html",
	  "permissions": [
		"tabs", "http://*/*","file:///*/*"
	  ],
	  "browser_action":
	  {
	  	"default_icon": "logo.png",
	  	"default_title": "browser action title"
	  },
	"content_scripts":[{
		"css": ["contentScript.css"],
      "js":["jquery-1.4.2.js",
      	"contentScript.js"],
      "matches": ["http://*/*",
      	"https://*/*","file:///*/*"]
  }]
}
